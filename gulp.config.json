{
  "client": "./src/client/",
  "server": "./src/server/",
  "htmltemplates": "./src/client/app/**/*.html",
  "css": [
    "./src/client/content/customtheme.css",
    "./src/client/content/styles.css"
  ],
  "js": [
    "./src/client/app/**/*.module.js",
    "./src/client/app/**/*.js",
    "./build/templates.js"
  ],

  "alljs":[
    "./src/client/**/*.js",
    "./src/server/**/*.js"
  ],
  "nodejs": [
    "./src/server/**/*.js"
  ],
  "specs": [
    "./src/client/app/**/*.spec.js",
    "./src/client/test/**/*.spec.js",
    "!./src/client/test/server-integration/**/*.spec.js"
  ],
  "specHelpers": [
      "./src/client/test/lib/specHelper.js",
      "./src/client/test/lib/appSpecHelper.js",
      "./src/client/test/lib/**/*.js"
  ],
  "serverIntegrationSpecs":[
    "./src/client/test/server-integration/**/*.spec.js"
  ],

  "testvendorcss": [
      "./node_modules/mocha/mocha.css"
  ],
  "testharnessjs":[
      "./node_modules/mocha/mocha.js",
      "./node_modules/chai/chai.js",
      "./node_modules/mocha-clean/index.js",
      "./bower_components/sinon/index.js",
      "./node_modules/sinon-chai/lib/sinon-chai.js"
  ],
  "testvendorjs": [
      "./node_modules/ng-midway-tester/src/ngMidwayTester.js",

      "./bower_components/jquery/dist/jquery.js",

      "./bower_components/angular/angular.js",
      "./bower_components/angular-mocks/angular-mocks.js",
      "./bower_components/angular-animate/angular-animate.js",
      "./bower_components/angular-route/angular-route.js",
      "./bower_components/angular-sanitize/angular-sanitize.js",

      "./bower_components/toastr/toastr.js",
      "./bower_components/moment/moment.js",
      "./bower_components/extras.angular.plus/ngplus-overlay.js"
  ],

  "fonts": [
    "./bower_components/font-awesome/fonts/**/*.*"
  ],
  "images": [
    "./src/client/content/images/**/*"
  ],
  "build": "./build/",
  "temp": "./.tmp/",
  "report": "./report/"
}